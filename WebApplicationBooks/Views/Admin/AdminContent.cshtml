@using WebApplicationBooks.Domain.Repository.EntityFramework
@using WebApplicationBooks.Domain.Repository.Entity;
@model Dictionary<User, Book>

<link rel="stylesheet" href="~/lib/boostrap/css/bootstrap.min.css" />
<script src="~/lib/boostrap/js/bootstrap.bundle.min.js"></script>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">All Users Urls</h2>
		</div>
	</div>

	<br><br>
	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						UserId
					</th>
					<th>
						Username
					</th>
					<th>
						Category
					</th>
					<th>
						Url
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td width="10%">@item.Value.UserId</td>
						<td width="20%">@item.Key.Username</td>
						<td width="35%">@item.Value.Categoria</td>
						<td width="35%">@item.Value.Url</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Sorry not have category...</p>
	}
</div>