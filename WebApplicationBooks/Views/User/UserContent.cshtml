@using WebApplicationBooks.Domain.Repository.Entity
@model IEnumerable<Book>

<link rel="stylesheet" href="~/lib/boostrap/css/bootstrap.min.css" />
<script src="~/lib/boostrap/js/bootstrap.bundle.min.js"></script>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">User Urls</h2>
		</div>
	</div>

	<br><br>
	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Category
					</th>
					<th>
						Url
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td width="50%">@item.Categoria</td>
						<td width="50%">@item.Url</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Sorry not have category...</p>
	}
</div>